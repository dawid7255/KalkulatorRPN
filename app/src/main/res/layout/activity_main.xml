<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/calyekran"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white1"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="81dp">

    <LinearLayout
        android:id="@+id/root_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="210dp"
            tools:layout_marginLeft="15dp"
            tools:layout_marginRight="15dp">

            <TextView
                android:id="@+id/EkranStos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:gravity="start"
                android:scrollbars="vertical"
                android:text=""
                android:textAlignment="textStart"
                android:textColor="@color/black2"
                android:textSize="30dp" />
        </ScrollView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TextViewBuffor"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="start"
                android:text=""
                android:textAlignment="textStart"
                android:textColor="@color/black2"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/ilosc"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="end"
                android:text="Stack: 0"
                android:textAlignment="textEnd"
                android:textColor="@color/black2"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/BEnter"
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white1"
                android:onClick="Enter"
                android:text="Enter"
                android:textColor="@color/black2"
                android:textSize="20dp" />

            <Button
                android:id="@+id/BZnak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white1"
                android:onClick="Znak"
                android:text="+/-"
                android:textColor="@color/black2"
                android:textSize="20dp" />

            <Button
                android:id="@+id/SQRT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white1"
                android:onClick="Pierwiastek"
                android:text="Sqrt"
                android:textColor="@color/black2"
                android:textSize="20dp" />

            <Button
                android:id="@+id/XN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white1"
                android:onClick="Potega"
                android:text="Pow"
                android:textColor="@color/black2"
                android:textSize="20dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/BSwap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white1"
                android:onClick="Zamien"
                android:text="Swap"
                android:textColor="@color/black2"
                android:textSize="20dp" />

            <Button
                android:id="@+id/B7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white1"
                android:onClick="Siedem"
                android:text="7"
                android:textColor="@color/black2"
                android:textSize="20dp" />

            <Button
                android:id="@+id/B8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white1"
                android:onClick="Osiem"
                android:text="8"
                android:textColor="@color/black2"
                android:textSize="20dp" />

            <Button
                android:id="@+id/B9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white1"
                android:onClick="Dziewiec"
                android:text="9"
                android:textColor="@color/black2"
                android:textSize="20dp" />

            <Button
                android:id="@+id/BDzielenie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white1"
                android:onClick="Dzielenie"
                android:text="/"
                android:textColor="@color/black2"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/BDrop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white1"
                android:onClick="UsunZStosu"
                android:text="Drop"
                android:textColor="@color/black2"
                android:textSize="20dp" />

            <Button
                android:id="@+id/B4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white1"
                android:onClick="Cztery"
                android:text="4"
                android:textColor="@color/black2"
                android:textSize="20dp" />

            <Button
                android:id="@+id/B5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white1"
                android:onClick="Piec"
                android:text="5"
                android:textColor="@color/black2"
                android:textSize="20dp" />

            <Button
                android:id="@+id/B6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white1"
                android:onClick="Szesc"
                android:text="6"
                android:textColor="@color/black2"
                android:textSize="20dp" />

            <Button
                android:id="@+id/BMnozenie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white1"
                android:onClick="Mnozenie"
                android:text="*"
                android:textColor="@color/black2"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/BUsun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white1"
                android:onClick="Usun"
                android:text="Del"
                android:textColor="@color/black2"
                android:textSize="20dp" />

            <Button
                android:id="@+id/B1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white1"
                android:onClick="Jeden"
                android:text="1"
                android:textColor="@color/black2"
                android:textSize="20dp" />

            <Button
                android:id="@+id/B2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white1"
                android:onClick="Dwa"
                android:text="2"
                android:textColor="@color/black2"
                android:textSize="20dp" />

            <Button
                android:id="@+id/B3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white1"
                android:onClick="Trzy"
                android:text="3"
                android:textColor="@color/black2"
                android:textSize="20dp" />

            <Button
                android:id="@+id/BOdejmowanie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white1"
                android:onClick="Odejmowanie"
                android:text="-"
                android:textColor="@color/black2"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <Button
                android:id="@+id/BUndo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white1"
                android:onClick="Cofnij"
                android:text="Undo"
                android:textColor="@color/black2"
                android:textSize="20dp" />

            <Button
                android:id="@+id/AC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white1"
                android:onClick="AC"
                android:text="AC"
                android:textColor="@color/black2"
                android:textSize="20dp" />

            <Button
                android:id="@+id/B0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white1"
                android:onClick="Zero"
                android:text="0"
                android:textColor="@color/black2"
                android:textSize="20dp" />

            <Button
                android:id="@+id/BKropka"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white1"
                android:onClick="Kropka"
                android:text="."
                android:textColor="@color/black2"
                android:textSize="20dp" />

            <Button
                android:id="@+id/BSuma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white1"
                android:onClick="Suma"
                android:text="+"
                android:textColor="@color/black2"
                android:textSize="20dp" />
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>